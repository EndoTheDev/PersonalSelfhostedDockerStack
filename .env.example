# Root domain for all services (e.g., example.com)
DOMAIN=yourdomain.com

# Local timezone (e.g., Asia/Bangkok)
TIMEZONE=Asia/Bangkok

# homarr
HOMARR_SECRET_KEY=your_homarr_secret_key_here

# arr stack
STORAGE_PATH=/mnt/storage/

# Tududi Task Management
TUDUDI_USER_EMAIL=your_email@example.com
TUDUDI_USER_PASSWORD=your_secure_password
TUDUDI_SESSION_SECRET=your_32_character_random_session_secret

# Pi-hole
PIHOLE_API_PASSWORD=your_secure_api_password_here

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_DB_SEARCH=0
REDIS_DB_WEBUI=1
REDIS_DB_HOMARR=2

# SearXNG Configuration
SEARXNG_SECRET=your_secure_random_secret_key_here

# N8n Configuration
N8N_HOST=n8n.${DOMAIN}
N8N_PROTOCOL=https
WEBHOOK_URL=https://n8n.${DOMAIN}/
N8N_EDITOR_BASE_URL=https://n8n.${DOMAIN}/

# Arcane Docker Management
ARCANE_ENCRYPTION_KEY=your_32_byte_encryption_key_here
ARCANE_JWT_SECRET=your_32_byte_jwt_secret_here

# PocketID
POCKETID_ID=your_pocketid_id_here
POCKETID_SECRET=your_pocketid_secret_here